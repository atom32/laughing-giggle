# Park Tycoon Game Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=park-tycoon-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Database Settings
# For development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./park_tycoon.db
# For production (PostgreSQL)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/park_tycoon
DATABASE_ECHO=false

# CORS Settings (comma-separated list)
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# Game Settings
STARTING_MONEY=10000
MAX_MODULE_LEVEL=5

# I18n Settings
DEFAULT_LANGUAGE=zh
SUPPORTED_LANGUAGES=zh,en,es,fr